@{
}



<h2>COMPRAS REALIZADAS</h2>
<table>
    <tr>
        <th>Código</th>
        <th>Telefono</th>
        <th>Direccion</th>
        <th>Monto total</th>
        <th>Detalles</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>N°@item.IdVenta</td>
            <td>S/ @item.Telefono</td>
            <td>@item.Direccion</td>
            <td>S/@item.MontoTotal</td>
            <td><a asp-controller="DetalleVenta" asp-action="VistaDetalles" asp-route-id="@item.IdVenta">VER DETALLES</a></td>
        </tr>
    }

</table>